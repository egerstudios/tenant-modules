{
    "name": "egerstudios/tenant-modules",
    "description": "A flexible module system for Laravel multi-tenant applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eger Studios",
            "email": "info@egerstudios.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "symfony/yaml": "^6.0",
        "spatie/laravel-permission": "^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Egerstudios\\TenantModules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Egerstudios\\TenantModules\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Egerstudios\\TenantModules\\TenantModulesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 